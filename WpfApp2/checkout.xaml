        <Image HorizontalAlignment="Left" Height="122" Margin="10,20,0,0" VerticalAlignment="Top" Width="177" OpacityMask="#FFCD7777"/>
        <Image x:Name="logo" HorizontalAlignment="Left" Height="127" Margin="10,10,0,0" VerticalAlignment="Top" Width="122" OpacityMask="#FFF0E5E5" Source="https://image.shutterstock.com/image-vector/pizza-cafe-logo-icon-emblem-260nw-1041333244.jpg"/>
